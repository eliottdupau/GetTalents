<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/icon_address"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_baseline_location_24"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/GetTalents.Profile.TextContent"
        android:id="@+id/textView_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@+id/icon_address"
        app:layout_constraintBottom_toBottomOf="@+id/icon_address"
        app:layout_constraintStart_toEndOf="@+id/icon_address"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="122 rue des grands arbres qui poussent vite, 60000 Saint Quentin - France"/>

</androidx.constraintlayout.widget.ConstraintLayout>