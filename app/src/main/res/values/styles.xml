<resources>

    <style name="GetTalents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    
    <!-- Menu Item -->

    <style name="GetTalents.MenuItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="GetTalents.MenuItem.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
    </style>

</resources>